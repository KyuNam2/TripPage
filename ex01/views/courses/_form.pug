.form-group
  label(for="title") Title
  input.form-control(type="text", name="title", placeholder="What's your course?", value=course.title)
.form-group
  label(for="course") Course
  textarea.form-control(name="content", rows="5")= course.content
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=course.tags ? course.tags.join(" ") : "")
